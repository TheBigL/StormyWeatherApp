<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">



<android.support.constraint.ConstraintLayout
    android:id="@+id/hourlyListItems"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ui.HourlyForecastActivity"
    tools:showIn="@layout/activity_hourly_forecast">

    <RelativeLayout
        android:id="@+id/hourlyListView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        contentPaddingBottom="8dp"
        tools:background="@color/appBackground">

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
</layout>